{{!-- to list and view products by admin --}}

<section>

<div class="container">
<table class="table btn-lg" id="productsTable">  
    <div class="row">
        <a href="/admin/add-product/{{product._id}}" class="btn btn-info m-3 ml-auto"> Add product</a>
  <a  href="/admin/logout" class="btn " style="background-color:rgb(235, 57, 12) ; color:white;width:2 rem;height:40px; margin-top:15px;">Logout</a> 
    </div>
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th scope="col">Price</th>
      <th scope="col">Stock Available</th>
      <th scope="col">Options</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
    <td>{{inc @index}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;heigth:50px;"src="/product-images/{{this._id}}.jpg" alt="watch"></td>
      <td>â‚¹{{this.Price}}/-</td>
       <td class="text-center">{{this.stock}}</td>
      <td class="cell-highlight">
          <a href="admin/edit-product/{{this._id}}" class="btn btn-success
      ">Edit</a>
        <a href="admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}')"
       >Delete</a> 
     </td>
    </tr>
{{/each}}
  </tbody>
</table>


</div>

</section>

