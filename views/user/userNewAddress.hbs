<section class="h-100 gradient-custom mt-5 ml-5  pb-3">
    <div class="page-content page-container " id="page-content">
        <div class="padding">
            <div class="padding"></div>
            <div class="row container d-flex justify-content-center">
                <div class="col-md-6 col-lg-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">

                                        {{#if user}}
                                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                            alt="User-Profile-Image" />
                                    </div>

                                    <h4 class="f-w-600" style="color: rgb(5, 5, 5);" >{{user.Name}}</h4>{{/if}}
                                    <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">


                                    <h3 class="mt-4 "><b>Add Address</b></h3>
                                    <div class="container">


                                        <!-- Single item -->
                                        <form method="post" id="address" action="/addAddress"
                                            enctype="multipart/form-data">

                                            <div class="row">
                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <div class="row align-items-center pt-4 pb-3">



                                                        <div class="col">

                                                            <input type="text" placeholder="Flate,House.no,Building,company" name="flat"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Data -->
                                                    <div class="row align-items-center pt-4 pb-3">



                                                        <div class="col">

                                                            <input type="text" placeholder="Area,Street,Village" name="area"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                            <div class="row">
                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <div class="row align-items-center pt-4 pb-3">


                                                        <div class="col">

                                                            <input type="text" placeholder="Pincode" name="pincode"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Data -->
                                                    <div class="row align-items-center pt-4 pb-3">



                                                        <div class="col">

                                                            <input type="text" placeholder="Landmark" name="landmark"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                            <div class="row">
                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <div class="row align-items-center pt-4 pb-3">


                                                        <div class="col">

                                                            <input type="text" placeholder="City" name="city"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Data -->
                                                    <div class="row align-items-center pt-4 pb-3">



                                                        <div class="col">

                                                            <input type="text"
                                                                placeholder="State"
                                                                name="state"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                            
                                           
                                            <div class="row">
                                                <div class="col-6"></div>
                                                <div class="col-sm-4"><button type="submit"
                                                        class="btn btn-success btn-lg mb-3">
                                                        Add
                                                    </button></div>
                                            </div>
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="padding"></div>
        <div class="padding"></div>
</section>
